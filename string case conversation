#include <stdio.h>

void main() {
    int length=0;
    char a[30];
    printf("Enter a string in lower case:");
    scanf("%s",a);
    for(int i=0;a[i]!='\0';i++)
    {
        if(a[i]>=97 && a[i]<=122)
        {
            a[i]=a[i]-32;
        }
    }
        printf("\nThe upper case string is:%s",a);
}
