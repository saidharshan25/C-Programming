#include<stdio.h>
#include<math.h>
void main() { 
double p,t,r,si,ci;
printf("Enter the princple amount:"); 
scanf("%lf",&p); 
printf("\nEnter the time period:"); 
scanf("%lf",&t); 
printf("\nEnter the rate of interst:"); 
scanf("%lf",&r); si=(p*t*r)/100; 
ci=p*pow((1+r/100),(r*t)); 
printf("\nThe Simple interst of the princle amount is:%.1lf",si);
printf("\nThe Compoundinterst of the princle amount is:%.1lf",ci); 
}
