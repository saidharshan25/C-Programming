#include <stdio.h>
struct Student {
    char name[50];
    int age;
    float totalMarks;
};
void main() 
{
    struct Student s1, s2;
    float averageMarks;
    printf("Enter details for Student 1:\n");
    printf("Name: ");
    scanf("%s", s1.name);
    printf("Age: ");
    scanf("%d", &s1.age);
    printf("Total Marks: ");
    scanf("%f", &s1.totalMarks);
    printf("\nEnter details for Student 2:\n");
    printf("Name: ");
    scanf("%s", s2.name);
    printf("Age: ");
    scanf("%d", &s2.age);
    printf("Total Marks: ");
    scanf("%f", &s2.totalMarks);
    averageMarks = (s1.totalMarks + s2.totalMarks) / 2;
    printf("\nStudent Information:\n");
    printf("Student 1: \n Name: %s\n Age: %d\n Total Marks: %.2f\n", s1.name, s1.age, s1.totalMarks);
    printf("Student 2:\n Name: %s\n Age: %d\n Total Marks: %.2f\n", s2.name, s2.age, s2.totalMarks);
    printf("Average Total Marks: %.2f\n", averageMarks);
}


