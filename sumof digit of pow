#include <stdio.h>
#include <math.h>
void main()
{
    int number, power, digit, sum = 0;
    printf("Enter a number: ");
    scanf("%d", &number);
    printf("Enter the power: ");
    scanf("%d", &power);
    int temp = number;
    while (temp > 0)
    {
        digit = temp % 10;             
        sum += (int)pow(digit, power);
        temp /= 10;             
    }
    printf("The sum of the digits of %d raised to the power %d is: %d\n", number, power, sum);
}